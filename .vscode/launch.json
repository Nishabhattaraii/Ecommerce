    "version": "0.2.0",
    "configurations": [
        

        {
            "name": "Python Debugger: Django",
            "type": "debugpy",
            "request": "launch",
            "args": [
                "runserver"
            ],
            "django": true,
            "autoStartBrowser": false,
            "program": "${workspaceFolder}/manage.py"
        },
        {
            
                    "name": "Python Debugger: Django",
                    "type": "debugpy",
                    "request": "launch",
                    "program": "${workspaceFolder}/manage.py",
                    "args": [
                        "runserver", "0.0.0.0:8002"
                    ],
                    "django": true,
                    "python": "${workspaceFolder}/venv/bin/python",  // Path to the Python executable in your venv
                    "console": "integratedTerminal", // Optional: to see output in VS Code's terminal
                    "env": {
                        "DJANGO_SETTINGS_MODULE": "config.settings.local" // Optional: specify settings module if needed
                    }
                }
        
    ]
}